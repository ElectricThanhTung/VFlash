<UserControl x:Class="VFlash.ConfigTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VFlash"
      MinWidth="300"
      MinHeight="200"
      DataContext="{Binding Config}"
      mc:Ignorable="d">
    <StackPanel>
        <GroupBox Header="CAN Device" Margin="5 10 5 10" BorderBrush="DarkGray" Background="#10000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0" Grid.Column="0"
                    Text="Device"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <ComboBox
                    Grid.Row="0" Grid.Column="1"
                    x:Name="DeviceComboBox"
                    Width="200" Height="25"
                    VerticalContentAlignment="Center"
                    SelectedIndex="0"
                    Margin="0 5 5 5"
                    HorizontalAlignment="Left">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Height="20">
                                <Image Height="16" Width="16" Source="{Binding DeviceIcon}"/>
                                <TextBlock Text="{Binding DeviceName}" VerticalAlignment="Center" Margin="5 0 0 0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock
                    Grid.Row="1" Grid.Column="0"
                    Text="Channel" Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <ComboBox
                    Grid.Row="1" Grid.Column="1"
                    x:Name="ChannelComboBox"
                    Text="{Binding Channel, UpdateSourceTrigger=PropertyChanged}"
                    Width="200" Height="25"
                    VerticalContentAlignment="Center"
                    Margin="0 5 5 5"
                    HorizontalAlignment="Left">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Height" Value="22" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
                <TextBlock
                    Grid.Row="2" Grid.Column="0"
                    Text="CAN Type" Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <ComboBox
                    Grid.Row="2" Grid.Column="1"
                    x:Name="CanTypeComboBox"
                    Text="{Binding CanType, UpdateSourceTrigger=PropertyChanged}"
                    Width="200" Height="25"
                    VerticalContentAlignment="Center"
                    Margin="0 5 5 5"
                    HorizontalAlignment="Left">
                    <ComboBoxItem Height="22">CAN</ComboBoxItem>
                    <ComboBoxItem Height="22">CAN FD</ComboBoxItem>
                </ComboBox>
                <TextBlock
                    Grid.Row="3" Grid.Column="0"
                    Text="Bitrate"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <TextBox
                    Grid.Row="3" Grid.Column="1"
                    Text="{Binding BitrateString, UpdateSourceTrigger=PropertyChanged}"
                    Background="#30FFFFFF"
                    Width="200" Height="25"
                    VerticalContentAlignment="Center"
                    Margin="0 5 5 5"
                    CaretBrush="Black"
                    HorizontalAlignment="Left">
                </TextBox>
            </Grid>
        </GroupBox>
        <GroupBox Header="Transport Layer" Margin="5 10 5 10" BorderBrush="DarkGray" Background="#10000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0" Grid.Column="0"
                    Text="TxId"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <TextBox
                    Grid.Row="0" Grid.Column="1"
                    Text="{Binding TxIdString, UpdateSourceTrigger=PropertyChanged}"
                    Background="#30FFFFFF"
                    Width="200" Height="25"
                    VerticalContentAlignment="Center"
                    Margin="0 5 5 5"
                    CaretBrush="Black"
                    HorizontalAlignment="Left">
                </TextBox>
                <TextBlock
                    Grid.Row="1" Grid.Column="0"
                    Text="RxId"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <TextBox
                    Grid.Row="1" Grid.Column="1"
                    Text="{Binding RxIdString, UpdateSourceTrigger=PropertyChanged}"
                    Background="#30FFFFFF"
                    Width="200" Height="25"
                    VerticalContentAlignment="Center"
                    Margin="0 5 5 5"
                    CaretBrush="Black"
                    HorizontalAlignment="Left">
                </TextBox>
                <TextBlock
                    Grid.Row="2" Grid.Column="0"
                    Text="Functional Id"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <TextBox
                    Grid.Row="2" Grid.Column="1"
                    Text="{Binding FunctionalIdString, UpdateSourceTrigger=PropertyChanged}"
                    Background="#30FFFFFF"
                    Width="200" Height="25"
                    VerticalContentAlignment="Center"
                    Margin="0 5 5 5"
                    CaretBrush="Black"
                    HorizontalAlignment="Left">
                </TextBox>
                <TextBlock
                    Grid.Row="3" Grid.Column="0"
                    Text="STmin"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                    <TextBox
                        Text="{Binding STminString, UpdateSourceTrigger=PropertyChanged}"
                        Width="200" Height="25"
                        Background="#30FFFFFF"
                        CaretBrush="Black"
                        VerticalContentAlignment="Center"
                        Margin="0 5 5 5">
                    </TextBox>
                    <TextBlock Text="ms" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock
                    Grid.Row="4" Grid.Column="0"
                    Text="P2"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                    <TextBox
                        Text="{Binding P2String, UpdateSourceTrigger=PropertyChanged}"
                        Width="200" Height="25"
                        Background="#30FFFFFF"
                        CaretBrush="Black"
                        VerticalContentAlignment="Center"
                        Margin="0 5 5 5">
                    </TextBox>
                    <TextBlock Text="ms" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock
                    Grid.Row="5" Grid.Column="0"
                    Text="P2* (Timeout)"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                    <TextBox
                        Text="{Binding TimeoutString, UpdateSourceTrigger=PropertyChanged}"
                        Width="200" Height="25"
                        Background="#30FFFFFF"
                        CaretBrush="Black"
                        VerticalContentAlignment="Center"
                        Margin="0 5 5 5">
                    </TextBox>
                    <TextBlock Text="ms" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Additional" Margin="5 10 5 10" BorderBrush="DarkGray" Background="#10000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0" Grid.Row="0"
                    Text="Security Level"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
                <ComboBox
                    Grid.Column="1" Grid.Row="0"
                    Width="200" Height="25"
                    Margin="0 5 5 5"
                    SelectedIndex="0"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Left">
                    <ComboBoxItem Height="22" Content="{Binding SecurityLevel}"/>
                </ComboBox>
                <TextBlock
                    Grid.Column="0" Grid.Row="1"
                    Text="Seed Key dll"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Height="25" VerticalAlignment="Top" Margin="0 5 0 5">
                    <TextBox
                        x:Name="SeedKeyDLLTextBox"
                        Text="{Binding SeedKeyDll, UpdateSourceTrigger=PropertyChanged}"
                        Width="200" Height="25"
                        Background="#30FFFFFF"
                        CaretBrush="Black"
                        Padding="0 0 3 0"
                        VerticalContentAlignment="Center"
                        Margin="0 0 5 0">
                    </TextBox>
                    <Button
                        BorderThickness="1"
                        Width="25"
                        BorderBrush="#B0B0B0"
                        Background="#30FFFFFF"
                        HorizontalAlignment="Right"
                        Click="OpenSeedKeyDllButton_Click">
                        <Button.Content>
                            <Image Height="16" Source="/VFlash;component/Resources/Images/Icons/OpenFile.png"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <TextBlock
                    Grid.Column="0" Grid.Row="2"
                    Text="Flash Actions"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Height="25" VerticalAlignment="Top" Margin="0 5 0 5">
                    <TextBox
                        x:Name="FlashActionsPAthTextBox"
                        Text="{Binding FlashActionsPath, UpdateSourceTrigger=PropertyChanged}"
                        Width="200" Height="25"
                        Background="#30FFFFFF"
                        CaretBrush="Black"
                        Padding="0 0 3 0"
                        VerticalContentAlignment="Center"
                        Margin="0 0 5 0">
                    </TextBox>
                    <Button
                        BorderThickness="1"
                        Width="25"
                        BorderBrush="#B0B0B0"
                        Background="#30FFFFFF"
                        HorizontalAlignment="Right"
                        Click="OpenFlashActionsButton_Click">
                        <Button.Content>
                            <Image Height="16" Source="/VFlash;component/Resources/Images/Icons/OpenFile.png"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <TextBlock
                    Grid.Column="0" Grid.Row="3"
                    Text="UDS default buffer size"
                    Margin="5 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0 5 0 5">
                    <TextBox
                        Text="{Binding UDSBufferSizeString, UpdateSourceTrigger=PropertyChanged}"
                        Width="200" Height="25"
                        Background="#30FFFFFF"
                        CaretBrush="Black"
                        VerticalContentAlignment="Center"
                        Margin="0 0 5 0">
                    </TextBox>
                    <TextBlock Text="byte" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </StackPanel>
</UserControl>
